<!doctype html>
<html lang="en">
<%- include('head') %>
<body>
	<%- include('header') %>

	<section>
		<h1>Your Accounts</h1>	
		
		<%= locals.message %><br>
		
		<% var accounts = locals.user.accounts %>
		<% if( accounts ) { %>
			<% for(var i=0; i < accounts.length; i++) { %>
				<div>
				<table>
					<tr><td><h2><%= accounts[i].name %> - <%= accounts[i].number %></h2></td></tr>
					<tr><td><% if(accounts[i].type == "C"){%>Checking<%}else{%>Savings<%}%></td></tr>
					<tr><td>$<%= (accounts[i].balance / 100).toFixed(2)%> USD</td></tr>
				</table>
				</div>
			<% } %>	
			
			<a href="./tokens"><button class="button button1">Add/Edit Your Email/Mobile #</button></a>&nbsp;
			<a href="./recipients"><button class="button button1">Add Recipients</button></a>
		<% } else { %>
			<h2>You don't have any accounts</h2>
		<% } %>		

	</section>
</body>
</html>