<!doctype html>
<html lang="en">
<%- include('head') %>
<body>
	<%- include('header') %>

	<section>
		<h1>Recipient</h1>		

		<%= locals.message %><br>		

		<% 
		var recipient; 
		var recipients = locals.user.recipients; 
		if (recipients) { 
			for(var i=0; i < recipients.length; i++) { 
				if (recipients[i].token == locals.recipienttoken && 
				    recipients[i].currentRecipientFirstName == locals.recipientfname &&
					recipients[i].currentRecipientLastName == locals.recipientlname) { 
					recipient = recipients[i] 
				} 
			} 
		 } 
		 %>		

		<div>
		<table>
		<% if( !recipient ) { %>
			<tr><td><a href="./recipients"><button class="button button1">Add Recpients</button></a></td></tr>
		<% } else { %>
			<tr><td>Mobile # or Email</td><td><%= recipient.token %></input></td></tr>
			<tr><td>First Name</td><td><%= recipient.currentRecipientFirstName %></td></tr>
			<tr><td>Last Name</td><td><%= recipient.currentRecipientLastName %></td></tr>
			<tr><td colspan="2"><a href="./editrecipient?token=<%=recipient.token%>&fname=<%=recipient.currentRecipientFirstName%>&lname=<%=recipient.currentRecipientLastName%>"><button class="button button1">Edit</button></a>&nbsp;<a href="./deleterecipient?token=<%=recipient.token%>&fname=<%=recipient.currentRecipientFirstName%>&lname=<%=recipient.currentRecipientLastName%>"><button class="button button1" onclick="return confirm('Are you sure?')">Delete</button></td></tr></td></tr>
		<% } %>
		</table>
		</div>

	</section>
</body>
</html>