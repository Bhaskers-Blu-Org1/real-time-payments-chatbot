<!doctype html>
<html lang="en">
<%- include('head') %>
<body>
	<%- include('header') %>

	<% 
		var recipients = locals.user.recipients;
		
		var numRecipients = 0;
		if (recipients && recipients.length > 0) {
			for(var i=0; i < recipients.length; i++) { 
				if(recipients[i].isDeleted == "N") { 
					numRecipients++;
				}
			}
		}				
	%>

	<section>
		<h1>Send money</h1>	
		
		<%= locals.message %><br>

		<h2>Select Recipient</h2>	
		
		<% if (numRecipients > 0) {%>
			<% for(var i=0; i < recipients.length; i++) { %>
				<% if(recipients[i].isDeleted == "N") { %>
					<div>
					<table>	
						<tr><td><h2><a href="./send2?token=<%=recipients[i].token%>&fname=<%=recipients[i].currentRecipientFirstName%>&lname=<%=recipients[i].currentRecipientLastName%>"><%=recipients[i].currentRecipientFirstName%> <%=recipients[i].currentRecipientLastName%></a></h2></td></tr>
						<tr><td><%=recipients[i].token%></td></tr>
					</table>
					</div>
				<% } %>
			<% } %>		
		<% } else { %>
			<a href="./newrecipient"><button class="button button1">Add New Recipient</button></a>
		<% } %>	
		
	</section>
</body>
</html>