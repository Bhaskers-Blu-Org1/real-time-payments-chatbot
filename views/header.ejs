<link rel="stylesheet" href="./css/modal.css">
<link rel="stylesheet" href="./css/chatbot.css">
<header>
	<a href="#" id="logo"></a>

	<nav>
		<a href="#" id="menu-icon"></a>
		<ul>
			<li><button id="chatbot-button"></button></li>
			<li><a href="./accounts" <%if(locals.section == "1"){%>class="current"<%}%>>Accounts</a></li>
			<li><a href="./send" <%if(locals.section == "2"){%>class="current"<%}%>>Send</a></li>
			<li><a href="./request" <%if(locals.section == "3"){%>class="current"<%}%>>Request</a></li>
			<li><a href="./activity" <%if(locals.section == "4"){%>class="current"<%}%>>Activity</a></li>
			<li><a href="./logout">Logout</a></li>
		</ul>
	</nav>

	<!-- The Modal -->
	<div id="myModal" class="modal">

	  <!-- Modal content -->
	  <div class="modal-content">
	    <span class="close">&times;</span>

				<div class="chatbot">

					<div id="contentParent" class="responsive-columns-wrapper">
				    <div id="chat-column-holder" class="responsive-column content-column">
				      <div class="chat-column">
				        <div id="scrollingChat"></div>
				        <label for="textInput" class="inputOutline">
				          <input id="textInput" class="input responsive-column"
				            placeholder="Type something" type="text"
				            onkeydown="ConversationPanel.inputKeyDown(event, this)">
				        </label>
				      </div>
				    </div>
				  </div>

				</div>
	  </div>
	</div>

</header>

<script src="js/common.js"></script>
<script src="js/api.js"></script>
<script src="js/conversation.js"></script>
<script src="js/modal.js"></script>
