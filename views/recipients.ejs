<!doctype html>
<html lang="en">
<%- include('head') %>
<body>
	<%- include('header') %>

	<section>
		<h1>Your Recipients</h1>	

		<%= locals.message %><br>	
		
		<%var recipients = locals.user.recipients %>
		<%if ( recipients ) { %>
			<% for(var i=0; i < recipients.length; i++) { %>
				<% if(recipients[i].isDeleted == "N") { %>
					<div>
					<table>			
						<tr><td><h2><a href="./viewrecipient?token=<%=recipients[i].token%>&fname=<%=recipients[i].currentRecipientFirstName%>&lname=<%=recipients[i].currentRecipientLastName%>"><%= recipients[i].currentRecipientFirstName %> <%= recipients[i].currentRecipientLastName %></a></h2></td></tr>
						<tr><td><%= recipients[i].token %></td></tr>
					</table>
					</div>
				<% } %>
			<% } %>	
		<% } %>	
		
		<a href="./newrecipient"><button class="button button1">Add New Recipient</button></a>

	</section>
</body>
</html>